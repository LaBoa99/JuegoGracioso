{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe compilar archivo activo",
			"command": "C:\\MinGW\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compilador: C:\\MinGW\\bin\\g++.exe"
		},
		{
			"label": "C/C++: g++.exe SFML",
			"command": ".\\${fileBasenameNoExtension}.exe",
			"dependsOn": "C/C++: g++.exe SFML Compilar",
			"detail": "Crea un archivo .exe y .o despues de esto ejecuta el programa.",
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe SFML Compilar",
			"command": "C:\\mingw64\\bin\\g++.exe",
			"dependsOn": "C/C++: g++.exe SFML Pre-Compilar",
			"args": [
				"-LC:\\SFML-2.5.1\\lib",
				".\\${fileBasenameNoExtension}.o",
				"-o",
				".\\${fileBasenameNoExtension}.exe",
				"-lsfml-graphics",
				"-lsfml-window",
				"-lsfml-system",
				"-lsfml-main",
				"-mwindows"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compilador: C:\\mingw64\\bin\\g++.exe"
		},
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe SFML Pre-Compilar",
			"command": "C:\\mingw64\\bin\\g++.exe",
			"args": [
				"-IC:\\SFML-2.5.1\\include",
				"-c",
				"${file}",
				"-o",
				".\\${fileBasenameNoExtension}.o"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compilador: C:\\mingw64\\bin\\g++.exe"
		}
	]
}